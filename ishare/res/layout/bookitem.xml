<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="2dip">
    <ImageView android:id="@+id/img_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dip"
    />
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    >
    <TextView android:id="@+id/text_title"
    android:layout_margin="2dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <RatingBar android:id="@+id/rb_book" 
     android:layout_width="wrap_content" 
     android:layout_height="15dip"
     android:isIndicator="true"
     android:numStars="10"
     style="?android:attr/ratingBarStyleSmall"
     />
    <TextView android:id="@+id/text_author"
    android:layout_margin="2dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <TextView android:id="@+id/text_summary"
    android:layout_margin="2dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <TextView android:id="@+id/text_price"
    android:layout_margin="2dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <TextView android:id="@+id/text_isbn"
    android:layout_margin="2dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <TextView android:id="@+id/text_publish"
    android:layout_margin="2dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    </LinearLayout>
</LinearLayout>
